	/* Groups Sidebar */
	.groups-sidebar {
		width: 380px;
		flex-shrink: 0;
		background-color: var(--white);
		border-right: 1px solid var(--gray-200);
		display: flex;
		flex-direction: column;
		overflow: hidden;
	}

	.sidebar-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.5rem;
	}

	.sidebar-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--gray-800);
	}

	.sidebar-actions {
		display: flex;
		gap: 0.5rem;
	}

	.sidebar-action-btn, .chat-action-btn, .message-action-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border-radius: 50%;
		background: none;
		border: none;
		color: var(--gray-600);
		cursor: pointer;
		transition: var(--transition);
	}

		.sidebar-action-btn:hover, .chat-action-btn:hover, .message-action-btn:hover {
			background-color: var(--gray-100);
			color: var(--primary-color);
		}

	.action-icon {
		width: 20px;
		height: 20px;
	}

	.search-container {
		padding: 1rem;
		border-bottom: 1px solid var(--gray-200);
	}

	.search-input-wrapper {
		display: flex;
		align-items: center;
		background-color: var(--gray-100);
		border-radius: 20px;
		padding: 0.5rem 1rem;
	}

	.search-icon {
		width: 16px;
		height: 16px;
		color: var(--gray-500);
		margin-right: 0.5rem;
	}

	.search-input {
		flex: 1;
		border: none;
		background: none;
		font-size: 0.875rem;
		color: var(--gray-700);
	}

		.search-input:focus {
			outline: none;
		}

	.filter-tabs {
		display: flex;
		padding: 0 1rem;
		border-bottom: 1px solid var(--gray-200);
	}

	.filter-tab {
		padding: 0.75rem 1rem;
		font-size: 0.875rem;
		color: var(--gray-600);
		background: none;
		border: none;
		border-bottom: 2px solid transparent;
		cursor: pointer;
		transition: var(--transition);
	}

		.filter-tab.active {
			color: var(--primary-color);
			border-bottom-color: var(--primary-color);
		}

	.conversations-list {
		flex: 1;
		overflow-y: auto;
	}

	.conversation-item {
		display: flex;
		align-items: center;
		padding: 0.75rem 1rem;
		cursor: pointer;
		transition: var(--transition);
	}

		.conversation-item:hover {
			background-color: var(--gray-100);
		}

		.conversation-item.active {
			background-color: rgba(114, 105, 239, 0.1);
		}

	.conversation-avatar {
		position: relative;
		margin-right: 0.75rem;
	}

	.conversation-info {
		flex: 1;
		min-width: 0;
	}

	.conversation-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 0.25rem;
	}

	.conversation-name {
		font-weight: 500;
		color: var(--gray-800);
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.conversation-time {
		font-size: 0.75rem;
		color: var(--gray-500);
	}

	.conversation-last-message {
		font-size: 0.875rem;
		color: var(--gray-600);
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		position: relative;
	}

	.unread-badge {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 18px;
		height: 18px;
		background-color: var(--primary-color);
		color: var(--white);
		font-size: 0.75rem;
		border-radius: 50%;
		margin-right: 0.5rem;
	}

	/* Chat Window */
	.chat-window {
		flex: 1;
		display: flex;
		flex-direction: column;
		background-color: var(--light-color);
		overflow: hidden;
	}

	.form-select {
		width: 120px;
		padding: 5px;
		border-radius: 10px;
		color: var(--gray-700);
	}


	/* Media queries for responsive design */
	@@media (max-width: 992px) {
		.header-nav {
			display: none;
		}

		.chat-layout {
			height: calc(100% - 57px);
		}
	}

	@@media (max-width: 768px) {
		.groups-sidebar {
			width: 240px;
		}
	}

	@@media (max-width: 576px) {
		.nav-sidebar {
			width: 60px;
		}

		.groups-sidebar {
			width: 220px;
		}

		.message {
			max-width: 85%;
		}
	}


	/* For mobile devices */
	@@media (max-width: 480px) {
		.chat-layout {
			flex-direction: column;
			height: calc(100% - 57px);
		}

		.nav-sidebar {
			width: 100%;
			height: 60px;
			flex-direction: row;
			justify-content: space-around;
			padding: 0;
		}


		.logo-container, .user-profile {
			display: none;
		}

		.sidebar-nav {
			width: 100%;
		}

		.nav-list {
			flex-direction: row;
			justify-content: space-around;
			margin: 0;
			padding: 0.5rem 0;
		}

		.groups-sidebar {
			width: 100%;
			height: 300px;
			min-height: 300px;
			max-height: 300px;
		}

		.chat-window {
			height: calc(100% - 360px);
		}

		.message {
			max-width: 90%;
		}
	}

	.modal-overlay {
