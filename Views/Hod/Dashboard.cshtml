<style>
	/* ---- Global Styles ---- */
	:root {
		--primary-color: #7269ef;
		--primary-light: #917bf1;
		--primary-dark: #9370db;
		--secondary-color: #f8f9fa;
		--dark-color: #2e2e2e;
		--dark-light: #36404a;
		--light-color: #f5f7fb;
		--gray-100: #eff2f7;
		--gray-200: #e9ecef;
		--gray-300: #dee2e6;
		--gray-400: #ced4da;
		--gray-500: #adb5bd;
		--gray-600: #7a7f9a;
		--gray-700: #495057;
		--gray-800: #343a40;
		--gray-900: #212529;
		--white: #ffffff;
		--red: #ef476f;
		--green: #06d6a0;
		--yellow: #ffd166;
		--info: #50a5f1;
		--border-radius: 0.375rem;
		--box-shadow: 0 2px 4px rgba(15, 34, 58, 0.12);
		--transition: all 0.3s ease;
		--font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
	}

	/* Reset and base styles */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html, body {
		height: 100% !important;
		font-family: var(--font-family);
		font-size: 16px;
		line-height: 1.5;
		color: var(--gray-800);
		background-color: var(--secondary-color);
	}

	.chat-app {
		height: 100% !important;
		display: flex;
		flex-direction: column;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	/* Button styles */
	.btn {
		display: inline-block;
		font-weight: 500;
		text-align: center;
		white-space: nowrap;
		vertical-align: middle;
		user-select: none;
		border: 1px solid transparent;
		padding: 0.5rem 1rem;
		font-size: 1rem;
		line-height: 1.5;
		border-radius: var(--border-radius);
		transition: var(--transition);
		cursor: pointer;
		background-color: var(--gray-200);
		color: var(--gray-800);
	}

	.btn-primary {
		background-color: var(--primary-color);
		color: var(--white);
	}

		.btn-primary:hover {
			background-color: var(--primary-dark);
		}

	.btn-sm {
		padding: 0.25rem 0.5rem;
		font-size: 0.875rem;
	}

	/* Header Styles */
	.header {
		background-color: var(--white);
		border-bottom: 1px solid var(--gray-200);
		padding: 0.75rem 0;
		box-shadow: var(--box-shadow);
		z-index: 10;
	}

		.header .container {
			display: flex;
			align-items: center;
			justify-content: space-between;
		}

	.logo {
		display: flex;
		align-items: center;
	}

	.logo-icon {
		width: 32px;
		height: 32px;
		color: var(--primary-color);
	}

	.logo-text {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--dark-color);
		margin-left: 0.5rem;
	}


	.user-profile {
		margin-top: auto;
		position: relative;
	}

	.avatar {
		width: 40px;
		height: 40px;
		border-radius: 50%;
		overflow: hidden;
		position: relative;
		cursor: pointer;
		border: 2px solid var(--primary-color);
		box-shadow: 0 2px 6px rgba(0,0,0,0.15);
	}

	.avatar-sm {
		width: 36px;
		height: 36px;
		border-width: 1px;
	}

	.avatar-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.avatar-placeholder {
		width: 100%;
		height: 100%;
		background-color: var(--primary-color);
		display: flex;
		justify-content: center;
		align-items: center;
		color: var(--white);
		font-weight: 600;
	}










	/* Group List Styling */
	.group-container {
		height: 100%;
		overflow: hidden;
		background-color: transparent;
	}

	.group-list {
		height: 100%;
		overflow-y: auto;
		padding: 10px 0;
		scrollbar-width: thin;
		scrollbar-color: #9b87f5 rgba(155, 135, 245, 0.1);
	}

		.group-list::-webkit-scrollbar {
			width: 6px;
		}

		.group-list::-webkit-scrollbar-track {
			background: rgba(155, 135, 245, 0.1);
		}

		.group-list::-webkit-scrollbar-thumb {
			background-color: #9b87f5;
		}

	#groups-ul {
		list-style-type: none;
		padding: 0;
		margin: 0;
	}

		#groups-ul li {
			margin-bottom: 8px;
			transition: all 0.3s ease;
		}

		#groups-ul .conversation-item {
			padding: 12px;
			transition: all 0.2s ease;
			background-color: rgba(255, 255, 255, 0.7);
			box-shadow: 0 2px 5px rgba(155, 135, 245, 0.15);
			border-left: 3px solid #9b87f5;
		}

			#groups-ul .conversation-item:hover {
				background-color: rgba(155, 135, 245, 0.1);
				transform: translateY(-2px);
				box-shadow: 0 5px 10px rgba(155, 135, 245, 0.2);
			}

			#groups-ul .conversation-item.active {
				background-color: #6E59A5;
				border-left: 3px solid #7E69AB;
			}

		#groups-ul .conversation-avatar {
			margin-right: 12px;
		}

		#groups-ul .avatar {
			width: 45px;
			height: 45px;
			border: 2px solid #9b87f5;
			box-shadow: 0 3px 6px rgba(155, 135, 245, 0.2);
			transition: all 0.2s ease;
		}

		#groups-ul .conversation-item:hover .avatar {
			transform: scale(1.05);
		}

		#groups-ul .avatar-placeholder {
			background: linear-gradient(135deg, #9b87f5 0%, #7E69AB 100%);
			font-size: 16px;
			font-weight: 600;
			color: white;
		}

		#groups-ul .status-indicator {
			border: 2px solid white;
			width: 12px;
			height: 12px;
			background-color: #4ade80;
		}

		#groups-ul .conversation-name {
			font-weight: 600;
			color: #1A1F2C;
			font-size: 15px;
		}

		#groups-ul .conversation-time {
			color: #7E69AB;
			font-weight: 500;
			font-size: 12px;
		}

		#groups-ul .conversation-last-message {
			color: #6E59A5;
			font-size: 13px;
		}




	/* Group search styling */
	#group-search {
		width: 100%;
		padding: 10px 15px;
		border-radius: 20px;
		border: 1px solid #D6BCFA;
		background-color: white;
		margin-bottom: 10px;
		font-size: 14px;
		color: #1A1F2C;
		box-shadow: 0 2px 5px rgba(155, 135, 245, 0.1);
		transition: all 0.3s ease;
	}

		#group-search:focus {
			outline: none;
			border-color: #9b87f5;
			box-shadow: 0 3px 10px rgba(155, 135, 245, 0.2);
		}

	/* Animation for new groups */
	@@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(10px);
		}

		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	#groups-ul li {
		animation: fadeInUp 0.4s ease forwards;
	}

		#groups-ul li:nth-child(1) {
			animation-delay: 0.05s;
		}

		#groups-ul li:nth-child(2) {
			animation-delay: 0.1s;
		}

		#groups-ul li:nth-child(3) {
			animation-delay: 0.15s;
		}

		#groups-ul li:nth-child(4) {
			animation-delay: 0.2s;
		}

		#groups-ul li:nth-child(5) {
			animation-delay: 0.25s;
		}












