<script>
	document.addEventListener("DOMContentLoaded", function () {
		var groupSelector = document.getElementById("groupSelector");
		const classGroupList = document.getElementById("classgroup-list");
		const membersList = document.getElementById("members-list");
		const friendsList = document.getElementById("friends-list");
		const currentUserRole = "@ViewData["CurrentUserRole"]";

		function updateVisibility() {
			const selectedValue = groupSelector.value;

			// Hide both first
			classGroupList.style.display = "none";
			membersList.style.display = "none";
			friendsList.style.display = "none";

			if (selectedValue === "classGroups") {
				classGroupList.style.display = "block";
			}
			else if (selectedValue === "colleagues" || selectedValue==="classmates") {
				membersList.style.display = "block";
			}
			else{
				friendsList.style.display = "block";
			}
		}

		if (groupSelector) {
			groupSelector.addEventListener("change", updateVisibility);
		}
	});
</script>
<script>
	// Custom Modal System
	const Modal = {
		showAnnouncement(title, content, priority) {
			// Create modal HTML
			const modalHTML = `
				<div class="modal-overlay active" id="announcementModal">
					<div class="modal-content">
						<div class="modal-header">
							<h3 class="modal-title">${title}</h3>
							<button class="close-btn">&times;</button>
						</div>
						<div class="modal-body">
							<p>${content}</p>
							<div class="priority-badge">Priority: <span>${priority}</span></div>
						</div>
						<div class="modal-footer">
							<button class="btn btn-secondary" data-close>Close</button>
							<button class="btn btn-primary" data-view-all>View All Announcements</button>
						</div>
					</div>
				</div>
			`;

			// Add to container
			document.getElementById('announcement-modals-container').innerHTML = modalHTML;

			// Add event listeners
			document.querySelector('#announcementModal .close-btn').addEventListener('click', () => {
				Modal.close();
			});

			document.querySelector('#announcementModal [data-close]').addEventListener('click', () => {
				Modal.close();
			});

			document.querySelector('#announcementModal [data-view-all]').addEventListener('click', () => {
				Modal.close();
				window.showAllAnnouncementsModal();
			});

			// Blur background
			document.getElementById('main-content').classList.add('blur-background');
		},

		showAllAnnouncements() {
			// Create modal HTML
			const modalHTML = `
				<div class="modal-overlay active" id="allAnnouncementsModal">
					<div class="modal-content">
						<div class="modal-header">
							<h3 class="modal-title">Your Announcements</h3>
							<button class="close-btn">&times;</button>
						</div>
						<div class="modal-body">
							<div id="announcementsContainer" class="announcements-container">

							</div>
						</div>
						<div class="modal-footer">
							<button class="btn btn-secondary" data-close>Close</button>
						</div>
					</div>
				</div>
			`;

			// Add to container
			document.getElementById('announcement-modals-container').innerHTML = modalHTML;

			// Add event listeners
			document.querySelector('#allAnnouncementsModal .close-btn').addEventListener('click', () => {
				Modal.close();
			});

			document.querySelector('#allAnnouncementsModal [data-close]').addEventListener('click', () => {
				Modal.close();
			});

			// Blur background
			document.getElementById('main-content').classList.add('blur-background');

			// Load announcements
			window.loadAnnouncements();
		},

		close() {
			// Remove blur
			document.getElementById('main-content').classList.remove('blur-background');

			// Clear modals
			document.getElementById('announcement-modals-container').innerHTML = '';
		}
	};

	// Global functions
	window.showAnnouncementModal = Modal.showAnnouncement;
	window.showAllAnnouncementsModal = Modal.showAllAnnouncements;
</script>
