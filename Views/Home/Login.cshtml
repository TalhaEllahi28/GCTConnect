 @model GCTConnect.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/images/logo.png">
    <title>Login Page</title>
    <style>
        /* Import Google Font */
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #f8f8ff;
            overflow: hidden;
        }

        /* Animated Background */
        .background-animation {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(-45deg, #8a2be2, #e6e6fa, #9370db);
            background-size: 400% 400%;
            animation: gradientMove 8s infinite alternate ease-in-out;
            z-index: -1;
        }

        /* Background Color Animation */
        @@keyframes gradientMove {
            0%

        {
            background-position: 0% 50%;
        }

        100% {
            background-position: 100% 50%;
        }

        }

        /* Slide-in Animation */
        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Floating Animation */
        @@keyframes float {
            0%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }

        100% {
            transform: translateY(0px);
        }

        }

        /* Glow Animation */
        @@keyframes glow {
            0%

        {
            box-shadow: 0 0 5px rgba(138, 43, 226, 0.2);
        }

        50% {
            box-shadow: 0 0 20px rgba(138, 43, 226, 0.6);
        }

        100% {
            box-shadow: 0 0 5px rgba(138, 43, 226, 0.2);
        }

        }

        /* Login Box */
        .container {
            width: 400px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            text-align: center;
            box-shadow: 0px 4px 15px rgba(138, 43, 226, 0.3);
            position: relative;
            animation: glow 4s infinite, float 6s ease-in-out infinite;
        }

        h2 {
            color: #673ab7;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
            animation: slideIn 0.8s ease-out forwards;
        }

        p {
            color: #9370db;
            font-size: 14px;
            margin-bottom: 20px;
            animation: slideIn 1.0s ease-out forwards;
        }

        /* Input Styles */
        .input-box {
            position: relative;
            margin-bottom: 25px;
            animation: slideIn 1.2s ease-out forwards;
        }

            .input-box input {
                width: 100%;
                padding: 12px 15px;
                border: 2px solid #e6e6fa;
                border-radius: 8px;
                background: #fff;
                color: #673ab7;
                font-size: 16px;
                outline: none;
                transition: all 0.3s ease;
            }

                .input-box input::placeholder {
                    color: #b19cd9;
                }

                .input-box input:focus {
                    border-color: #8a2be2;
                    box-shadow: 0px 0px 8px rgba(138, 43, 226, 0.4);
                }

        /* Button with Hover Effect */
        .next-btn {
            width: 100%;
            padding: 12px;
            border: none;
            background: linear-gradient(to right, #8a2be2, #9370db);
            color: white;
            font-size: 16px;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.4s ease-in-out;
            position: relative;
            overflow: hidden;
            animation: slideIn 1.4s ease-out forwards;
        }

            /* Button Hover Animation */
            .next-btn:hover {
                transform: scale(1.05);
                background: linear-gradient(to right, #9370db, #8a2be2);
            }

        /* Create Account */
        .create-account {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #9370db;
            cursor: pointer;
            transition: 0.3s;
            animation: slideIn 1.6s ease-out forwards;
        }

            .create-account:hover {
                color: #8a2be2;
            }

        /* Error Text */
        .text-danger {
            color: #ff4081;
            font-size: 12px;
            margin-top: 5px;
            display: block;
            text-align: left;
        }

        /* Logo element */
        .logo {
            margin-bottom: 20px;
            animation: slideIn 0.6s ease-out forwards, float 5s ease-in-out infinite;
        }

            .logo img {
                width: 120px;
                height: 120px;
                object-fit: contain;
            }

        /* Responsive Design */
        @@media (max-width: 450px) {
            .container

        {
            width: 90%;
            padding: 30px;
        }

        }

        /* Applied animations to elements */
        .slide-in {
            opacity: 0;
            transform: translateY(30px);
            animation: slideIn 0.5s ease-out forwards;
        }

            .slide-in:nth-child(2) {
                animation-delay: 0.2s;
            }

            .slide-in:nth-child(3) {
                animation-delay: 0.4s;
            }

            .slide-in:nth-child(4) {
                animation-delay: 0.6s;
            }
    </style>
</head>
<body>
    <div class="background-animation"></div> <!-- Animated Background -->

    <div class="container">
        <div class="login-box">
@*             <div class="logo">
                <img src="~/images/logo.png" alt="G Logo" />
            </div> *@
            <h2 class="slide-in">WELCOME</h2>
            <p class="slide-in">Please login to access your account</p>

            <form asp-controller="Home" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-box slide-in">
                    <input id="email" asp-for="Username" class="form-control" placeholder="Enter User Name" />
                    <span asp-validation-for="Username"></span>
                </div>

                <div class="input-box slide-in">
                    <input id="password" asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="Password"></span>
                </div>

                <button type="submit" class="next-btn slide-in">Login</button>

            </form>
        </div>
    </div>


</body>
</html>