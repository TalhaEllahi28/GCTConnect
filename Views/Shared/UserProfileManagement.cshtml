	.social-links-container {
		position: relative;
	}

	.social-links-hint {
		position: absolute;
		right: 10px;
		top: 40px;
		color: var(--purple-600);
		font-size: 0.8rem;
	}

	/* Responsive adjustments */
		@@media screen and (max-width: 768px) {
		.page-container

	{
		flex-direction: column;
	}

	.nav-wrapper {
		position: fixed;
		bottom: 0;
		top: auto;
		left: 0;
		width: 100%;
		height: auto;
		z-index: 100;
	}

	.content-wrapper {
		margin-left: 0;
		width: 100%;
		margin-bottom: 60px; /* Space for bottom nav on mobile */
	}

