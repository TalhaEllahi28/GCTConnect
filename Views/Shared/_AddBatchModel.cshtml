<div id="batchModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="batchModalTitle">Add New Batch</h3>
            <button class="modal-close" onclick="hideModal('batchModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <form id="batchForm" class="batch-form">
                <input type="hidden" id="batchMode" value="add" />
                <input type="hidden" id="existingBatchId" value="" />

                <div class="form-group">
                    <label>Batch Year</label>
                    <input type="number" id="batchYear" class="form-input" min="2020" max="2030" required>
                    <span id="batchYearError" class="error-message" style="display: none;"></span>
                </div>

                <div class="form-group">
                    <label>Select Departments</label>
                    <div id="departmentsList" class="departments-container">
                        <!-- Departments will be loaded here dynamically -->
                    </div>
                    <span id="departmentsError" class="error-message" style="display: none;">Please select at least one department</span>
                </div>

                <div id="existingDepartmentsInfo" style="display: none;">
                    <div class="info-box">
                        <h4>Current Departments for this Batch:</h4>
                        <div id="currentDepartmentsList"></div>
                        <p><small>Select additional departments to add to this batch</small></p>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline" onclick="hideModal('batchModal')">Cancel</button>
            <button class="btn btn-primary" onclick="saveBatch()" id="saveBatchBtn">Create Batch</button>
        </div>
    </div>
</div>

