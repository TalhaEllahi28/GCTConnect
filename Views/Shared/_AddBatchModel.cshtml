        display: flex;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid #eee;
    }

        .department-item:last-child {
            border-bottom: none;
        }

        .department-item input[type="checkbox"] {
            margin-right: 10px;
        }

    .info-box {
        background: #f8f9fa;
