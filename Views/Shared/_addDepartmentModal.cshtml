                </div>*@
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline" onclick="hideModal('addDepartmentModal')">Cancel</button>
            <button id="saveDepartmentBtn" class="btn btn-primary" onclick="saveDepartment()">Create Department</button>
        </div>
    </div>
</div>
