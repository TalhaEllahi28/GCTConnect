<div class="chat-window-wrapper">
    <div id="chat-window-inner" class="chat-container1">
        <!-- New chat header -->
        <div class="chat-header">
            <div class="chat-title">
                <span>Messages</span>
                <span class="status-indicator"></span>
            </div>
        </div>

        <div id="messages-container" data-current-user="@User.Identity.Name">
            @foreach (var message in Model)
            {
                <div class="message-container @(message.IsCurrentUser ? "sent" : "received")">
                    <div class="avatar-wrapper">
                        <img src="@(message.ProfilePic ?? "https://thumbs.dreamstime.com/b/default-avatar-profile-icon-vector-social-media-user-image-182145777.jpg")" alt="@message.Sender" class="avatar-image" />
                    </div>
                    <div class="message-content">
                        <div class="message-bubble">
                            @if (!string.IsNullOrEmpty(message.Content))
                            {
                                <p>@message.Content</p>
                            }

                            @if (!string.IsNullOrEmpty(message.FileUrl))
                            {
                                <div class="file-preview">
                                    @if (message.FileType != null && message.FileType.StartsWith("image/"))
                                    {
                                        <img src="@message.FileUrl" alt="@(message.FileName ?? "Image")" class="image-preview" />
                                        <a href="@message.FileUrl" download="@message.FileName" class="file-download">@(message.FileName ?? "Download image")</a>
                                    }
                                    else if (message.FileType != null && message.FileType.StartsWith("video/"))
                                    {
                                        <video src="@message.FileUrl" controls class="video-preview"></video>
                                        <a href="@message.FileUrl" download="@message.FileName" class="file-download">@(message.FileName ?? "Download video")</a>
                                    }
                                    else if (message.FileType != null && message.FileType.StartsWith("audio/"))
                                    {
                                        <audio src="@message.FileUrl" controls class="audio-preview"></audio>
                                        <a href="@message.FileUrl" download="@message.FileName" class="file-download">@(message.FileName ?? "Download audio")</a>
                                    }
                                    else
                                    {
                                        <div class="generic-file">
                                            <svg class="file-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                                <polyline points="14 2 14 8 20 8"></polyline>
                                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                                <line x1="10" y1="9" x2="8" y2="9"></line>
                                            </svg>
                                            <span class="file-name">@(message.FileName ?? "File")</span>
                                        </div>
                                        <a href="@message.FileUrl" download="@message.FileName" class="file-download">Download file</a>
                                    }
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(message.AudioUrl))
                            {
                                <div class="file-preview">
                                    <audio src="@message.AudioUrl" controls class="audio-preview"></audio>
                                    <a href="@message.AudioUrl" download="voice-message.wav" class="file-download">Download voice message</a>
                                </div>
                            }
                        </div>
                        <span class="timestamp">@message.Timestamp.ToString("hh:mm tt")</span>
                    </div>
                </div>
            }
        </div>

        <!-- File preview area -->
        <div id="file-preview"></div>

