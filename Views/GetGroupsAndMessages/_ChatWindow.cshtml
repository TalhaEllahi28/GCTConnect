    .modal-btn {
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .modal-btn-cancel {
        background-color: #e5e7eb;
        color: #374151;
    }

        .modal-btn-cancel:hover {
            background-color: #d1d5db;
        }

    .modal-btn-upload {
        background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
        color: white;
    }

        .modal-btn-upload:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(126, 105, 171, 0.3);
        }

        .modal-btn-upload:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
