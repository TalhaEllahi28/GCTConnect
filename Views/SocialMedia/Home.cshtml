@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GCT Connect</title>
    <link rel="stylesheet" href="/css/socialMedia.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<style>
    .header-nav {
        display: flex;
        gap: 1.5rem;
    }

    .nav-link {
        color: var(--gray-600);
        text-decoration: none;
        transition: var(--transition);
    }

        .nav-link:hover {
            color: var(--primary-color);
        }

    /* ---- Chat Layout Styles ---- */
    .chat-layout {
        height: 100% !important;
        display: flex;
        height: calc(100% - 57px); /* subtract header height */
        overflow: hidden;
    }

    /* Navigation Sidebar */
    .nav-sidebar {
        height: 100%;
        width: 80px;
        flex-shrink: 0;
        background-color: #9370db !important;
        border-right: 1px solid var(--dark-light);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem 0;
        color: var(--white);
        position: fixed;
        z-index: 99;
    }
    @@media (max-width: 1024px) {
        .nav-sidebar

    {
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        width: 100%;
        height: 60px;
        bottom: 0;
        left: 0;
        top: auto;
        border-right: none;
        border-top: 1px solid var(--dark-light);
        padding: 0.5rem;
    }

    ul.nav-list {
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }

    .logo-container {
        padding: 0 !important;
    }

    }

    @@media (max-width: 1540px) and (min-width: 1025px) {
        .main-container

    {
        padding-left: 100px;
    }

    }


    @@media (max-width: 1023px) {
        .main-container

    {
        padding-left: 20;
        padding-bottom: 60px;
    }

    }
    @@media (max-width: 1024px) and (min-width: 768px) {
        .friend-item

    {
        flex-direction: column;
        align-items: center;
    }

    .friend-info {
        text-align: center;
    }

    }

    .logo-container {
        padding: 0.5rem 0 1.5rem;
    }

    img.sidebar-img {
        height: 45px;
        width: 45px;
        border-radius: 10px;
    }

    .chat-logo-icon {
        width: 32px;
        height: 32px;
        color: var(--white);
        opacity: 0.7;
        transition: var(--transition);
        cursor: pointer;
    }

        .chat-logo-icon:hover {
            opacity: 1;
        }

    .sidebar-nav {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center; /* Vertically center icons */
        width: 100%; /* Ensure full width */
    }

    .nav-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        align-items: center; /* Horizontally center each icon */
        gap: 1.5rem;
        padding: 0;
        margin: 0;
    }


    .nav-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        cursor: pointer;
    }

    .nav-icon {
        width: 24px;
        height: 24px;
        color: #ced4da;
        transition: var(--transition);
    }

    .nav-text {
        font-size: 0.75rem;
        margin-top: 0.25rem;
        color: var(--gray-400);
    }

    .nav-item:hover .nav-icon,
    .nav-item:hover .nav-text {
        color: #ffffff;
    }


    .nav-item.active .nav-icon,
    .nav-item.active .nav-text {
        color: white;
    }


    .user-profile {
        margin-top: auto;
        position: relative;
    }

    .badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background: red;
        color: white;
        border-radius: 50%;
        padding: 2px 6px;
        font-size: 0.7em;
        min-width: 18px;
        text-align: center;
    }

    .d-none {
        display: none !important;
    }

    /* Toast styles */
    .toast {
        margin-bottom: 10px;
        max-width: 350px;
    }

    .toast-header.bg-low {
        background-color: #0d6efd !important;
    }

    .toast-header.bg-medium {
        background-color: #ffc107 !important;
        color: #000 !important;
    }

    .toast-header.bg-high {
        background-color: #dc3545 !important;
    }
</style>

    <!-- Navigation Sidebar (Fixed Position) -->
    <partial name="_NavPartial" />

<body>
    <!-- Top Search Bar -->
    <div class="top-search-bar">
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search students, departments, interests..." class="search-input">
            <button class="search-btn">🔍</button>
        </div>
    </div>

    <div class="main-container">
        <!-- Left Sidebar -->
        <aside class="left-sidebar">
            <!-- Profile Section -->
            <div class="profile-card">
                <div class="profile-header">
                    <img src="https://images.pexels.com/photos/1438081/pexels-photo-1438081.jpeg?auto=compress&cs=tinysrgb&w=150&h=150&fit=crop" alt="Profile" class="profile-avatar">
                    <div class="profile-info">
                        <h3>Loading...</h3>
                        <p>Loading...</p>
                        <p class="profile-stats">Loading...</p>
                    </div>
                </div>
            </div>

            <!-- Suggested Friends -->
            <div class="suggested-friends-card">
                <div class="card-header">
                    <h3>People You May Know</h3>
                    <div class="filter-buttons">
                        <button class="filter-btn active" data-filter="batch">Batch</button>
                        <button class="filter-btn" data-filter="department">Dept</button>
                        <button class="filter-btn" data-filter="interests">Interests</button>
                    </div>
                </div>
                <div class="friends-list" id="friendsList">
                    <div class="loading-spinner">Loading suggestions...</div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Post Creation -->
            <div class="create-post-card">
                <div class="post-input-section">
                    <img src="https://images.pexels.com/photos/1438081/pexels-photo-1438081.jpeg?auto=compress&cs=tinysrgb&w=50&h=50&fit=crop" alt="Your avatar" class="small-avatar">
                    <textarea id="postText" placeholder="What's on your mind?" class="post-textarea"></textarea>
                </div>
                <div class="post-actions">
                    <button class="media-btn">📷 Photo/Video</button>
                    <select class="privacy-dropdown" id="privacySelect">
                        <option value="public">🌍 Public</option>
                        <option value="department">🏛️ Department Only</option>
                        <option value="batch">👥 Batch Only</option>
                    </select>
                    <button class="post-btn" id="createPostBtn">Post</button>
                </div>
            </div>

            <!-- Posts Feed -->
            <div class="posts-container" id="postsContainer">
                <div class="loading-spinner">Loading posts...</div>
            </div>
        </main>

        <!-- Right Sidebar -->
        <aside class="right-sidebar">
            <div class="trending-card">
                <h3>Trending on Campus</h3>
                <div class="loading-spinner">Loading trending...</div>
            </div>

            <div class="events-card">
                <h3>Upcoming Events</h3>
                <div class="event-item">
                    <div class="event-date">MAR<br><span>12</span></div>
                    <div class="event-info">
                        <h4>Tech Workshop</h4>
                        <p>AI & Machine Learning</p>
                    </div>
                </div>
                <div class="event-item">
                    <div class="event-date">MAR<br><span>15</span></div>
                    <div class="event-info">
                        <h4>Career Fair</h4>
                        <p>Meet top recruiters</p>
                    </div>
                </div>
            </div>
        </aside>
    </div>

    <!-- Bottom Spacing for Navbar -->
    <div class="bottom-spacing"></div>

    <script src="/js/socialMedia.js"</script>
</body>
