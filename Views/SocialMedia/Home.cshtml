<body>
    <!-- Navigation Sidebar (Fixed Position) -->
    <partial name="_NavPartial" />

    <!-- Top Search Bar -->
    <div class="top-search-bar">
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search students, departments, interests..." class="search-input">
            <button class="search-btn">🔍</button>
        </div>
    </div>

    <div class="main-container">
        <!-- Left Sidebar -->
        <aside class="left-sidebar">
            <!-- Profile Section -->
            <div class="profile-card">
                <div class="profile-header">
                    <img src="https://images.pexels.com/photos/1438081/pexels-photo-1438081.jpeg?auto=compress&cs=tinysrgb&w=150&h=150&fit=crop" alt="Profile" class="profile-avatar">
                    <div class="profile-info">
                        <h3>Sarah Johnson</h3>
                        <p>Computer Science, 2025</p>
                        <p class="profile-stats">156 friends • 89 posts</p>
                    </div>
                </div>
            </div>

            <!-- Suggested Friends -->
            <div class="suggested-friends-card">
                <div class="card-header">
                    <h3>People You May Know</h3>
                    <div class="filter-buttons">
                        <button class="filter-btn active" data-filter="batch">Batch</button>
                        <button class="filter-btn" data-filter="department">Dept</button>
                        <button class="filter-btn" data-filter="interests">Interests</button>
                    </div>
                </div>
                <div class="friends-list" id="friendsList">
                    <!-- Friends will be populated by JavaScript -->
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Post Creation -->
            <div class="create-post-card">
                <div class="post-input-section">
                    <img src="https://images.pexels.com/photos/1438081/pexels-photo-1438081.jpeg?auto=compress&cs=tinysrgb&w=50&h=50&fit=crop" alt="Your avatar" class="small-avatar">
                    <textarea id="postText" placeholder="What's on your mind, Sarah?" class="post-textarea"></textarea>
                </div>
                <div class="post-actions">
                    <button class="media-btn">📷 Photo/Video</button>
                    <select class="privacy-dropdown" id="privacySelect">
                        <option value="public">🌍 Public</option>
                        <option value="department">🏛️ Department Only</option>
                        <option value="batch">👥 Batch Only</option>
                    </select>
                    <button class="post-btn" id="createPostBtn">Post</button>
                </div>
            </div>

            <!-- Posts Feed -->
            <div class="posts-container" id="postsContainer">
                <!-- Posts will be populated by JavaScript -->
            </div>
        </main>

        <!-- Right Sidebar -->
        <aside class="right-sidebar">
            <div class="trending-card">
                <h3>Trending on Campus</h3>
                <div class="trending-item">
                    <div class="trending-icon">🎓</div>
                    <div class="trending-content">
                        <h4>Final Exam Schedule</h4>
                        <p>Check your exam dates</p>
                    </div>
                </div>
                <div class="trending-item">
                    <div class="trending-icon">🎪</div>
                    <div class="trending-content">
                        <h4>Spring Festival</h4>
                        <p>March 15-17, Main Campus</p>
                    </div>
                </div>
                <div class="trending-item">
                    <div class="trending-icon">📚</div>
                    <div class="trending-content">
                        <h4>Study Groups</h4>
                        <p>Join collaborative learning</p>
                    </div>
                </div>
            </div>

            <div class="events-card">
