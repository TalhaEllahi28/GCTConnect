    }

    /* Toast styles */
    .toast {
        margin-bottom: 10px;
        max-width: 350px;
    }

    .toast-header.bg-low {
        background-color: #0d6efd !important;
    }

    .toast-header.bg-medium {
        background-color: #ffc107 !important;
        color: #000 !important;
    }

    .toast-header.bg-high {
        background-color: #dc3545 !important;
    }
